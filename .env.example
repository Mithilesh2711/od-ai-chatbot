# =============================================================================
# AI Chatbot Environment Configuration
# Copy this file to .env and update the values for your environment
# =============================================================================

# =============================================================================
# Multi-Model LLM Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Claude (Anthropic) Configuration (Optional)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL_SONNET=claude-3-5-sonnet-20241022
CLAUDE_MODEL_HAIKU=claude-3-5-haiku-20241022

# Gemini (Google) Configuration (Optional)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_PRO=gemini-1.5-pro
GEMINI_MODEL_FLASH=gemini-1.5-flash

# DeepSeek Configuration (Optional)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL_CHAT=deepseek-chat

# =============================================================================
# Database Configuration
# =============================================================================

# MongoDB Configuration
MONGODB_URL=mongodb://username:password@hostname:port/database_name
DATABASE_NAME=okiedokieERP

# Qdrant Vector Database Configuration
QDRANT_URL=https://your-qdrant-instance.com:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=od-leads

# =============================================================================
# Application Configuration
# =============================================================================

# API Configuration
API_TITLE=AI Chatbot API
API_VERSION=1.0.0

# Performance and Feature Flags
ENABLE_RERANKING=true
ENABLE_QUERY_TRANSFORMATION=true
ENABLE_SENTENCE_WINDOW=true
ENABLE_EMBEDDING_CACHE=true
ENABLE_CONNECTION_POOLING=true
ENABLE_ASYNC_QUERY_TRANSFORM=true

# =============================================================================
# Reranking Configuration (Optional)
# =============================================================================

COHERE_API_KEY=your_cohere_api_key_here
RERANK_MODEL=rerank-english-v3.0
RERANK_TOP_N=3
INITIAL_RETRIEVAL_K=10

# =============================================================================
# Sentence Window Configuration
# =============================================================================

SENTENCE_WINDOW_SIZE=3

# =============================================================================
# Embedding Configuration
# =============================================================================

EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=512

# =============================================================================
# Tool Configuration
# =============================================================================

TOOL_BASE_URL=http://localhost:7070

# =============================================================================
# mTalkz Configuration (Optional)
# =============================================================================

MTALKZ_BASE_URL=https://rcmapi.instaalerts.zone/services/rcm/sendMessage
MTALKZ_API_KEY=your_mtalkz_api_key_here
MTALKZ_ACCESS_TOKEN=your_mtalkz_access_token_here

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Authentication Configuration
JWT_SECRET_KEY=change_this_to_a_secure_secret_key_in_production
JWT_ALGORITHM=HS256

# =============================================================================
# Docker Configuration
# =============================================================================

# Python Configuration
PYTHONUNBUFFERED=1
